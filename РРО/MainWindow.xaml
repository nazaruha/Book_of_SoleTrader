<Window x:Class="РРО.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:РРО"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="329*"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="dgNoteBook" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Width="80"/>
                <DataGridTextColumn Header="Date" Width="100"/>
                <DataGridTextColumn Header="Manufacturer" Width="100"/>
                <DataGridTextColumn Header="Product" Width="80"/>
                <DataGridTextColumn Header="Count" Width="50"/>
                <DataGridTextColumn Header="Total Sum" Width="80"/>
                <DataGridTextColumn Header="Customer" Width="100"/>
                <DataGridTextColumn Header="Discount" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
