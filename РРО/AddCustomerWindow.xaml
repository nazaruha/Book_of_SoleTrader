<Window x:Class="РРО.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:РРО"
        mc:Ignorable="d"
        Title="AddCustomerWindow" Height="284" Width="271">
    <Canvas>
        <StackPanel HorizontalAlignment="Center" Height="236" VerticalAlignment="Top">
            <Label Content="Add Customer" FontSize="20" FontWeight="DemiBold" Margin="65,20,0,0"/>
            <WrapPanel Width="269">
                <Label Content="Name:" FontSize="15" FontWeight="DemiBold" Margin="13,20,0,0"/>
                <TextBox Name="txtName" Margin="5,20,0,0" Width="180" FontSize="18"/>
                <Label Content="Phone:" FontSize="15" FontWeight="DemiBold" Margin="13,20,0,0"/>
                <TextBox Name="txtPhone" Margin="2,20,0,0" FontSize="18" Width="180" Height="30"/>
            </WrapPanel>
            <Label Name="lbError" Content="Customer's already in database" FontSize="10" Margin="88,-3,0,0" Foreground="#FFDA2222" Visibility="Hidden"/>
            <Button Name="btnAddCustomer" Content="Add Customer" FontSize="20" FontWeight="DemiBold" Width="177" Height="40" Background="#FF6281FF" Margin="0,10,0,0" Click="btnAddCustomer_Click"/>
        </StackPanel>
    </Canvas>
</Window>
