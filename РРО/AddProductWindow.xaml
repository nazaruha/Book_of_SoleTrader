<Window x:Class="РРО.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:РРО"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="231" Width="271">
    <Canvas>
        <StackPanel>
            <Label Content="Add Product" FontSize="20" FontWeight="DemiBold" Margin="80,20,0,0"/>
            <WrapPanel>
                <Label Content="Name:" FontSize="15" FontWeight="DemiBold" Margin="13,20,0,0"/>
                <TextBox Name="txtProduct" Margin="5,20,0,0" Width="180" FontSize="18"/>
            </WrapPanel>
            <Label Name="lbError" Content="Product's already in database" FontSize="10" Margin="90,-3,0,0" Foreground="#FFDA2222" Visibility="Hidden"/>
            <Button Name="btnAddProduct" Content="Add Product" FontSize="20" FontWeight="DemiBold" Width="177" Height="40" Background="#FFECE76B" Margin="15,25,0,0" Click="btnAddProduct_Click"/>
        </StackPanel>
    </Canvas>
</Window>
